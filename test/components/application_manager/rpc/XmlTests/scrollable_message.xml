    <!-- ScrollableMessage: All parameters -->
    <test testName="ScrollableMessage_AllParams" pause="5000">
          <request>
                   <params>
                           <Integer function_id = "25"/>
			   <Integer correlation_id = "1" />
                   </params>
                   <message_params>
				<String scrollableMessageBody="messageBody"/>
				<Integer timeout="3000"/>
				<Vector name="softButtons">
					<SoftButton>
						<String type="BOTH" />
						<String text="Close" />
						<image>
							<String value="icon.png" />
							<String imageType="DYNAMIC" />
						</image>
						<Boolean isHighlighted="true" />
						<Integer softButtonID="32" />
						<String systemAction="DEFAULT_ACTION" />
					</SoftButton>
					<SoftButton>
						<String type="BOTH" />
						<String text="Keep" />
						<image>
							<String value="icon.png" />
							<String imageType="DYNAMIC" />
						</image>
						<Boolean isHighlighted="true" />
						<Integer softButtonID="33" />
						<String systemAction="KEEP_CONTEXT" />
					</SoftButton>
				</Vector>
                   </message_params>
          </request>
          <response>
                   <params>
                           <Integer correlation_id = "1" />
                   </params>
                   <message_params>
                           <String resultCode = "SUCCESS" />
                   </message_params>
          </response>
          <HMIRequestFirst>
                   <params>
                           <Integer function_id = "72" />
                   </params>
                   <message_params>
                           <String method = "UI.ScrollableMessage" />
                           <params>
                                   <Integer appID = "65537" />
                                   <messageText>
                                                <String fieldName="scrollableMessageBody" />
                                                <String fieldText="messageBody" />
                                   </messageText>
                                   <Vector name="softButtons">
					<SoftButton>
						<String type="BOTH" />
						<String text="Close" />
						<image>
							<Patch value="icon.png" />
							<String imageType="DYNAMIC" />
						</image>
						<Boolean isHighlighted="true" />
						<Integer softButtonID="32" />
						<String systemAction="DEFAULT_ACTION" />
					</SoftButton>
					<SoftButton>
						<String type="BOTH" />
						<String text="Keep" />
						<image>
							<Patch value="icon.png" />
							<String imageType="DYNAMIC" />
						</image>
						<Boolean isHighlighted="true" />
						<Integer softButtonID="33" />
						<String systemAction="KEEP_CONTEXT" />
					</SoftButton>
				</Vector>
                                   <Integer timeout="3000"/>
                           </params>

                   </message_params>
          </HMIRequestFirst>
    </test>

